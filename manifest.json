{
  "manifest_version": 2,

  "name": "wishList",
  "description": "creates a wish list",
  "version": "1.0",

  "browser_action": {
    "default_icon": "hellokitty1.png",
    "default_popup": "popup.html"
    // "default_title": "Click here!"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["bower_components/angular/angular.js", "popup.js", "url.js"],
      "run_at": "document_start"
    }
  ],

  "permissions": ["http://*/*", "https://*/*", "unlimitedStorage", "contextMenus", "cookies", "tabs"]
}
