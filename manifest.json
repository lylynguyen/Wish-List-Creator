{
  "manifest_version": 2,

  "name": "wishList",
  "description": "creates a wish list",
  "version": "1.0",

  "browser_action": {
    "default_icon": "assets/images/kitty_mac.png",
    "default_popup": "popup.html"
    // "default_title": "Click here!"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["bower_components/angular/angular.js","bower_components/angular-aria/angular-aria.js", "bower_components/angular-animate/angular-animate.js", "bower_components/angular-material/angular-material.js", "js/popup.js"],
      "run_at": "document_start"
    }
  ],

  "permissions": ["storage", "http://*/*", "https://*/*", "tabs"]
}
